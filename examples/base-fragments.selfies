# Base Fragments Library
# Common molecular building blocks that can be imported

# === ALKYL GROUPS ===
[methyl] = [C]
[ethyl] = [C][C]
[propyl] = [C][C][C]
[butyl] = [C][C][C][C]
[isopropyl] = [C][Branch1][C][C][C]

# === FUNCTIONAL GROUPS ===
[hydroxyl] = [O]
[amino] = [N]
[carbonyl] = [C][=O]
[carboxyl] = [C][=O][O]
[thiol] = [S]

# === HALOGENS ===
[fluoro] = [F]
[chloro] = [Cl]
[bromo] = [Br]
[iodo] = [I]

# === AROMATIC ===
[phenyl] = [C][=C][C][=C][C][=C][Ring1][=Branch1]
